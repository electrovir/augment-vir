{
    "name": "augment-vir",
    "version": "4.4.0",
    "private": true,
    "homepage": "https://github.com/electrovir/augment-vir",
    "bugs": {
        "url": "https://github.com/electrovir/augment-vir/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/augment-vir"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "compile": "rm -rf packages/*/dist && find . -name  -delete && find . -name tsconfig.tsbuildinfo -delete && echo \"pre-compiling...\" && echo \"$(npm run compile --workspaces >/dev/null 2>&1)\" && npm run compile --workspaces",
        "docs:update": "virmator code-in-markdown",
        "format": "virmator format",
        "prepublishOnly": "echo \"Error: use \\x1b[32m\\\"npm run publish\\\"\\x1b[0m instead of \\x1b[31m\\\"npm publish\\\"\\x1b[0m\" && exit 1;",
        "publish": "npm run test:all && virmator publish",
        "spellcheck": "virmator spellcheck",
        "test": "npm run test --workspaces",
        "test:all": "npm run spellcheck && npm run test:format && npm run test:docs && npm run test:types && npm run compile && npm run test",
        "test:docs": "virmator code-in-markdown check",
        "test:format": "virmator format check",
        "test:types": "tsc --build tsconfig.build.json"
    },
    "devDependencies": {
        "cspell": "^6.14.2",
        "markdown-code-example-inserter": "^0.1.11",
        "prettier": "^2.7.1",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^1.1.1",
        "prettier-plugin-organize-imports": "^3.2.0",
        "prettier-plugin-packagejson": "^2.3.0",
        "prettier-plugin-sort-json": "^0.0.3",
        "prettier-plugin-toml": "^0.3.1",
        "virmator": "^4.3.3"
    }
}
