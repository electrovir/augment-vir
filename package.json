{
    "name": "augment-vir",
    "version": "19.5.0",
    "private": true,
    "homepage": "https://github.com/electrovir/augment-vir",
    "bugs": {
        "url": "https://github.com/electrovir/augment-vir/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/augment-vir"
    },
    "license": "(MIT or CC0 1.0)",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "compile": "bash ./bash-scripts/compile.sh",
        "docs:update": "virmator docs",
        "format": "virmator format",
        "publish": "virmator publish \"npm run test:all\"",
        "test": "mono-vir for-each-async npm test",
        "test:all": "npm run compile && npm run test:files && concurrently --kill-others-on-fail --kill-signal SIGKILL -c auto --colors --names spelling,tests,format \"npm run test:spelling\" \"npm run test:coverage\" \"npm run test:format\"",
        "test:coverage": "npm run test:coverage --workspaces",
        "test:docs": "virmator docs check",
        "test:files": "cd packages/scripts && npm run verify",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "mono-vir for-each-async tsc --noEmit"
    },
    "devDependencies": {
        "concurrently": "^8.2.1",
        "cspell": "^7.3.7",
        "esbuild": "^0.19.4",
        "markdown-code-example-inserter": "^0.3.2",
        "mono-vir": "^0.1.5",
        "npm-check-updates": "~16.12.3",
        "prettier": "^2.8.8",
        "prettier-plugin-interpolated-html-tags": "^0.0.4",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^2.0.0",
        "prettier-plugin-organize-imports": "^3.2.3",
        "prettier-plugin-packagejson": "^2.4.6",
        "prettier-plugin-sort-json": "^2.0.0",
        "prettier-plugin-toml": "^0.3.1",
        "typedoc": "^0.25.2",
        "typescript": "^5.2.2",
        "virmator": "^8.0.5"
    },
    "overrides": {
        "semver": "npm:semver@7.5.3",
        "make-dir": "npm:make-dir@v4.0.0"
    }
}
