{
    "name": "augment-vir",
    "version": "8.1.0",
    "private": true,
    "homepage": "https://github.com/electrovir/augment-vir",
    "bugs": {
        "url": "https://github.com/electrovir/augment-vir/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/augment-vir"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "compile": "tsc --build tsconfig.build.json && npm run compile --workspaces",
        "compile:clean": "rm -rf packages/*/dist && rm -f packages/*/tsconfig.tsbuildinfo && npm run compile",
        "docs:update": "virmator code-in-markdown",
        "format": "virmator format",
        "publish": "virmator publish npm run test:all",
        "test": "tsc --build tsconfig.build.json && npm run test --workspaces",
        "test:all": "npm run compile && npm run test:spelling && npm run test:format && npm run test:docs && npm run test:coverage",
        "test:coverage": "tsc --build tsconfig.build.json && npm run test:coverage --workspaces",
        "test:docs": "virmator code-in-markdown check",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "tsc --build tsconfig.build.json",
        "test:web": "virmator test-web"
    },
    "devDependencies": {
        "cspell": "^6.18.1",
        "markdown-code-example-inserter": "^0.1.13",
        "prettier": "^2.8.2",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^1.1.2",
        "prettier-plugin-organize-imports": "^3.2.1",
        "prettier-plugin-packagejson": "^2.3.0",
        "prettier-plugin-sort-json": "^1.0.0",
        "prettier-plugin-toml": "^0.3.1",
        "typescript": "^4.9.4",
        "virmator": "^5.3.1"
    }
}
